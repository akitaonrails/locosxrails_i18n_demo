<% form_for @contact do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile %>
  </p>
  <p>
  	<%= f.label :description %><br />
		<%= f.text_area :description, :rows => 3 %>
  </p>
  <p><%= f.submit t("common.submit") %></p>
<% end %>
